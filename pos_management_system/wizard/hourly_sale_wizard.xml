<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hourly_sale_wizard_form" model="ir.ui.view">
        <field name="name">hourly.sale.wizard.form</field>
        <field name="model">hourly.sale.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Hourly Sale Report">
                <sheet>
                    <group>
                        <group>
                            <field name="date_from" />
                            <field name="date_to" />
                        </group>
                        <group>
                            <field name="employee_id" />
                            <field name="session_id" />
                        </group>
                    </group>
                    <footer>
                        <button name="action_print_report" type="object" string="Print"
                            class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>