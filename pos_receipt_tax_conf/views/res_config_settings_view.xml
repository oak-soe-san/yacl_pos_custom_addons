<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_setting_receipt_tax_configuration_form_view" model="ir.ui.view">
        <field name="name">res.config.setting.receipt.tax.configuration.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="auto_printing" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="pos_receipt_tax_conf">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Receipt Tax Configuration</span>
                        <div class="text-muted">
                            Print taxes on receipt configuration.
                        </div>
                        <div class="content-group mt16 row">
                            <label for="tax_configuration" string="Tax Configuration" class="col-lg-3 o_light_label"/>
                            <field name="tax_configuration"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
