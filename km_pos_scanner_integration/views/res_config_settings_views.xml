<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_view_pos_scanner_integration" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_scanner_integration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_is_passport_scanner"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_is_passport_scanner" string="Use Passport Scanner"/>
                        <div class="text-muted">
                            Allow to scan passport in customer screen
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
